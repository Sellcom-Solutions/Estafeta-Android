<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation     ="vertical"
    android:layout_width    ="match_parent"
    android:layout_height   ="match_parent"
    android:background      ="@color/white"
    android:layout_weight="95">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:orientation     ="vertical"
                android:gravity         ="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head_oficinas"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:paddingBottom="40dp"
                    android:layout_gravity="top|center_horizontal"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        android:layout_marginTop    ="100dp">
                        <TextView
                            android:layout_width        ="match_parent"
                            android:layout_height       ="match_parent"
                            android:layout_weight       ="70"
                            />

                        <TextView
                            android:layout_width        ="match_parent"
                            android:layout_height       ="match_parent"
                            android:text                ="@string/oficinas"
                            android:textSize            ="@dimen/sizeLargeText"
                            android:layout_weight       ="30"
                            android:layout_marginLeft   ="60dp"
                            android:textColor           ="@color/estafeta_text"
                            android:gravity             ="center_vertical"/>
                    </LinearLayout>

                </FrameLayout>
            </FrameLayout>
        </LinearLayout><!--25-->

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight   ="20"
                android:weightSum="100"
                android:layout_marginTop="10dp">
                <Button
                    android:id              ="@+id/btn_near"
                    android:layout_width    ="0dp"
                    android:layout_height   ="wrap_content"
                    android:layout_weight   ="45"
                    android:text            ="@string/offices_near"
                    android:textSize        ="@dimen/sizeNormalText"
                    android:textColor       ="@color/estafeta_red"
                    android:textStyle       ="normal"
                    android:background      ="@drawable/btn_red_border"
                    android:layout_gravity  ="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="3dp"/>

                <Button
                    android:id              ="@+id/btn_ar"
                    android:layout_width    ="0dp"
                    android:layout_height   ="wrap_content"
                    android:layout_weight   ="45"
                    android:text            ="@string/view_ar"
                    android:textSize        ="@dimen/sizeNormalText"
                    android:textColor       ="@color/estafeta_red"
                    android:textStyle       ="normal"
                    android:background      ="@drawable/btn_red_border"
                    android:layout_gravity  ="center_horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout><!--20-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/estafeta_light_gray"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:weightSum="100"
                android:layout_weight   ="70">

                <TextView
                    android:layout_width    ="match_parent"
                    android:layout_height   ="wrap_content"
                    android:text            ="@string/offices_search_by_address"
                    android:textSize        ="@dimen/sizeMediumText"
                    android:id              ="@+id/textView"
                    android:textColor       ="@color/estafeta_text"
                    android:layout_gravity  ="left"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:weightSum="100">
                    <Spinner
                        android:id              ="@+id/spn_state"
                        android:layout_width    ="0dp"
                        android:layout_height   ="wrap_content"
                        android:layout_weight    ="90"
                        android:spinnerMode       ="dialog"
                        android:dividerHeight     ="0dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <EditText
                        android:id                  ="@+id/edt_city"
                        android:layout_width        ="0dp"
                        android:layout_height       ="wrap_content"
                        android:layout_weight       ="100"
                        android:textColor           ="@color/estafeta_text"
                        android:textSize            ="@dimen/sizeMediumText"
                        android:imeOptions          ="actionNext"
                        android:singleLine          ="true"
                        android:hint                ="@string/city"
                        android:textColorHint       ="@color/estafeta_soft_gray"
                        android:nextFocusDown       ="@+id/edt_colony"
                        android:layout_marginRight  ="10dp"
                        android:layout_marginTop    ="10dp"
                        android:layout_marginLeft   ="20dp"/>


                </LinearLayout>

                <LinearLayout
                    android:orientation         ="horizontal"
                    android:layout_width        ="match_parent"
                    android:layout_height       ="wrap_content"
                    android:layout_weight       ="3"
                    android:layout_gravity      ="left"
                    android:layout_marginTop    ="10dp"
                    android:layout_marginLeft   ="10dp"
                    android:layout_marginRight  ="20dp">

                    <EditText
                        android:id                  ="@+id/edt_colony"
                        android:layout_width        ="match_parent"
                        android:layout_height       ="wrap_content"
                        android:textColor           ="@color/estafeta_text"
                        android:textSize            ="@dimen/sizeMediumText"
                        android:hint                ="@string/locality"
                        android:textColorHint       ="@color/estafeta_soft_gray"
                        android:inputType           ="text"
                        android:imeOptions          ="actionNext"
                        android:layout_marginLeft   ="10dp"
                        android:layout_marginRight  ="10dp"
                        android:layout_weight       ="1"/>


                    <EditText
                        android:id                  ="@+id/edt_zip_code"
                        android:layout_width        ="match_parent"
                        android:layout_height       ="wrap_content"
                        android:maxLength           ="5"
                        android:imeOptions          ="actionNext"
                        android:inputType           ="numberSigned"
                        android:textColor           ="@color/estafeta_text"
                        android:textSize            ="@dimen/sizeMediumText"
                        android:hint                ="@string/zip_code"
                        android:textColorHint       ="@color/estafeta_soft_gray"
                        android:layout_weight       ="2" />

                </LinearLayout>

                <TextView
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:text                ="@string/mandatory_fields"
                    android:textSize=           "@dimen/sizeXSmallText"
                    android:textColor           ="@color/estafeta_red"
                    android:layout_gravity      ="left"
                    android:layout_marginLeft   ="30dp"
                    android:layout_marginRight  ="20dp"/>
            </LinearLayout><!--70-->
            <LinearLayout
                android:orientation         ="horizontal"
                android:layout_width        ="match_parent"
                android:layout_height       ="match_parent"
                android:gravity             ="center|bottom"
                android:layout_weight   ="10"
                android:paddingTop="2dp">

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Search"
                    android:textSize="@dimen/sizeLargeText"
                    android:textColor="@color/estafeta_red"
                    android:background="@android:color/transparent"
                    android:layout_gravity="bottom|center_horizontal"/>
            </LinearLayout><!--10-->
        </LinearLayout><!--72-->


    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/footerSize"
            android:layout_marginLeft="10dp"
            android:text="@string/footer"
            android:textColor="@color/estafeta_soft_gray"
            android:textStyle="bold"
            android:padding="5dp"
            android:gravity="top"
            android:layout_gravity="top|center_horizontal"
            />
    </LinearLayout><!--5-->

</LinearLayout>