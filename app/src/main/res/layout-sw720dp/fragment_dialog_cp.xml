<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white"
    tools:context="com.sellcom.apps.tracker_material.Fragments.FragmentDialogCP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/codigo_postal"
            android:textColor="@color/estafeta_text"
            android:textSize="@dimen/sizeLargeText"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/estado"
            android:textColor="@color/estafeta_text"
            android:textSize="@dimen/sizeMediumText"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_dialog_estado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/estafeta_text"
            android:textSize="@dimen/sizeMediumText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/city_etc"
            android:textColor="@color/estafeta_text"
            android:textSize="@dimen/sizeMediumText"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_dialog_ciudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/estafeta_text"
            android:textSize="@dimen/sizeMediumText"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="100"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/estafeta_red">

            <TextView
            android:layout_width="0dp"
                android:layout_weight="60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/locality"
            android:textColor="@color/white"
            android:background="@color/estafeta_red"
            android:textSize="@dimen/sizeMediumText"
            android:textStyle="bold"
            />
            <TextView
            android:id="@+id/tv_cp_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="40"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/zip_code"
            android:textColor="@color/white"
            android:background="@color/estafeta_red"
            android:textSize="@dimen/sizeMediumText"
            android:textStyle="bold"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30">
        <ListView
            android:id="@+id/lv_dialog_colonia"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:divider="@color/estafeta_soft_gray"
            android:dividerHeight="-20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_cerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="10"
        android:background="@android:color/transparent"
        android:gravity="right|center_vertical"
        android:paddingRight="10dp"
        android:text="@string/cerrar"
        android:textColor="@color/estafeta_red"
        android:textSize="@dimen/sizeMediumText"
        />

</LinearLayout>
