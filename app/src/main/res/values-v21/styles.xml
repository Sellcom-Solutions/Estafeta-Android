<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/estafeta_red</item>
        <item name="colorPrimaryDark">@color/estafeta_dark_red</item>
        <item name="colorAccent">@color/estafeta_red</item>
        <item name="android:textColorPrimary">@color/estafeta_text</item>
        <item name="android:navigationBarColor">@color/estafeta_red</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:spinnerStyle">@style/mySpinnerItemStyle</item>
        <item name="android:checkboxStyle">@style/CheckBox</item>
        <item name="colorControlNormal">@color/estafeta_soft_gray</item>
        <item name="colorControlActivated">@color/estafeta_soft_gray</item>
        <item name="colorControlHighlight">@color/estafeta_soft_gray</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="DialogAnimations">
        <item name="android:windowEnterAnimation">@anim/dialog_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/dialog_to_bottom</item>
    </style>

    <style name="AnimatedDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimations</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EditStyle" parent="Widget.AppCompat.EditText">

        <item name="colorControlNormal">@color/estafeta_red</item>
        <item name="colorControlActivated">@color/estafeta_red</item>
        <item name="colorControlHighlight">@color/estafeta_red</item>

    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>


    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@android:color/transparent</item>
    </style>

</resources>
