<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="100">

    <FrameLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="0dp"
        android:layout_weight="20"
        android:gravity         ="center"
        android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/head_rastreo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="top"/>
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="right"
            android:weightSum="100">

            <TextView
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:text                ="@string/rastreo"
                    android:textColor           ="@color/estafeta_text"
                    android:textSize            ="@dimen/sizeLargeText"
                    android:layout_weight       ="100"
                    android:paddingLeft         ="60dp"
                    android:layout_gravity      ="right"
                    android:gravity             ="center" />

            </LinearLayout>
        </FrameLayout>
    </FrameLayout><!--20-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:weightSum="100"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:weightSum="60"
            android:orientation="vertical">

            <LinearLayout
                android:id                          ="@+id/info_linelayout"
                android:layout_width                ="match_parent"
                android:layout_height               ="0dp"
                android:layout_weight               ="29"
                android:orientation                 ="horizontal"
                android:minHeight                   ="@dimen/sizeNormalText">

                <TextView
                    android:layout_width            ="0dp"
                    android:layout_height           ="wrap_content"
                    android:layout_marginLeft       ="10dp"
                    android:layout_marginStart      ="10dp"
                    android:layout_marginTop        ="10dp"
                    android:layout_weight           ="1"
                    android:layout_gravity="center_vertical"
                    android:text                    ="@string/aviso_rastreo"
                    android:textColor               ="@color/estafeta_text"
                    android:textSize                ="@dimen/sizeSmallText"
                    android:textStyle               ="bold"/>

                <Button
                    android:id                      ="@+id/btn_help"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="\?"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop ="10dp"
                    android:textSize="@dimen/sizeLargeText"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_border_red"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width            ="match_parent"
                android:layout_height           ="0dp"
                android:layout_weight           ="14"
                android:minHeight               ="@dimen/sizeNormalText">

                <EditText
                    android:id                      ="@+id/edt_codigo"
                    style                           ="@style/EditStyle"
                    android:layout_width            ="0dp"
                    android:layout_height           ="40dp"
                    android:layout_marginLeft       ="10dp"
                    android:layout_weight           ="1"
                    android:drawablePadding         ="5dp"
                    android:focusableInTouchMode    ="true"
                    android:hint                    ="@string/codigo"
                    android:inputType               ="number"
                    android:maxLength               ="22"
                    android:padding                 ="3dp"
                    android:textColor               ="@color/estafeta_text"
                    android:textColorHint           ="@color/estafeta_red"
                    android:textSize                ="@dimen/sizeNormalText"
                    />

                <Button
                    android:id                      ="@+id/btn_agregar"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:text="+"
                    android:textColor="@color/estafeta_red"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/sizeXLargeText"
                    android:layout_gravity="center_vertical|top"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="@dimen/sizeSmallText"
                android:layout_weight="17">

                <TextView
                    android:layout_width            ="wrap_content"
                    android:layout_height           ="wrap_content"
                    android:layout_gravity          ="start"
                    android:layout_marginLeft       ="10dp"
                    android:text                    ="@string/aviso_codigo"
                    android:textSize                ="@dimen/sizeSmallText"
                    android:textColor               ="@color/estafeta_text"/>
            </LinearLayout>

        </LinearLayout><!--60-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/estafeta_light_gray"
            android:orientation="horizontal"
            android:layout_weight="13"
            android:minHeight="15dp"
            android:weightSum="100">

            <Button
                android:id                      ="@+id/btn_escanear"
                android:layout_width            ="0dp"
                android:layout_height           ="wrap_content"
                android:layout_gravity          ="left"
                android:layout_marginBottom     ="1dp"
                android:layout_marginRight      ="1dp"
                android:layout_weight           ="50"
                android:background              ="@color/white"
                android:text                    ="@string/boton_escanear"
                android:textColor               ="@color/estafeta_red"
                android:textSize                ="@dimen/sizeMediumText"/>

            <Button
                android:id                      ="@+id/btn_rastrear"
                android:layout_width            ="0dp"
                android:layout_height           ="wrap_content"
                android:layout_gravity          ="right"
                android:layout_marginBottom     ="1dp"
                android:layout_marginLeft       ="1dp"
                android:layout_weight           ="50"
                android:background              ="@color/white"
                android:text                    ="@string/boton_rastrear"
                android:textColor               ="@color/estafeta_red"
                android:textSize                ="@dimen/sizeMediumText"/>

        </LinearLayout><!--10-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="37"
            android:background="@color/estafeta_light_gray">

            <ListView
                android:id                      ="@+id/liv_rastreo"
                android:layout_width            ="match_parent"
                android:layout_height           ="wrap_content"
                android:visibility              ="visible">

            </ListView>

        </LinearLayout><!--30-->
    </LinearLayout><!--70-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/footerSize"
            android:layout_marginLeft="10dp"
            android:text="@string/footer"
            android:textColor="@color/estafeta_soft_gray"
            android:gravity="bottom"
            android:layout_gravity="bottom|center_horizontal"
            />

    </LinearLayout><!--10-->

</LinearLayout>