<?xml version="1.0" encoding="utf-8"?>
<com.sellcom.apps.tracker_material.Adapters.VerticalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width    ="match_parent"
                        android:layout_height   ="wrap_content"
                        android:orientation     ="vertical"
                        android:gravity         ="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/head_favorites"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:paddingBottom="30dp"
                            android:layout_gravity="top|center_horizontal"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width        ="match_parent"
                                android:layout_height       ="match_parent"
                                android:text                ="@string/favoritos"
                                android:textSize            ="@dimen/sizeLargeText"
                                android:layout_weight       ="100"
                                android:layout_marginTop    ="40dp"
                                android:textColor           ="@color/estafeta_text"
                                android:layout_gravity      ="right"
                                android:gravity             ="center" />

                        </FrameLayout>
                    </FrameLayout>
                </LinearLayout><!--25-->

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
                android:layout_marginBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:text="@string/notification_alarm"
                    android:textColor="@color/estafeta_text"
                    android:textSize="@dimen/sizeMediumText"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:layout_weight="75"

                        android:layout_marginBottom="2dp"
                        android:text="@string/delivery_confirmation"
                        android:textColor="@color/estafeta_text"
                        android:textSize="@dimen/sizeMediumText"
                        android:background="@color/white"/>

                    <Switch
                        android:id="@+id/swch_notifica"
                        android:layout_weight="20"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        style="@style/AppTheme"
                        android:background="@color/white"/>

                </LinearLayout>

                <ListView
                    android:id="@+id/liv_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:divider="@color/estafeta_soft_gray"
                    android:dividerHeight="1dp">

                </ListView>


            </LinearLayout>
    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/footerSize"
                android:layout_marginLeft="10dp"
                android:text="@string/footer"
                android:textColor="@color/estafeta_soft_gray"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="top"
                android:layout_gravity="top|center_horizontal"
                />
        </FrameLayout><!--5-->

    </FrameLayout>

    </com.sellcom.apps.tracker_material.Adapters.VerticalScrollView>

