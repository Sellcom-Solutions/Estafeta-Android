<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="100">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="96"
            android:background="@color/white"
            android:weightSum="100">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:divider="@color/estafeta_soft_gray"
               android:showDividers="end"
               android:background="@color/estafeta_light_gray"
               android:weightSum="90">

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/title_date_time"
                   android:textColor="@color/estafeta_text"
                   android:textSize="@dimen/sizeXSmallText"
                   android:paddingLeft="10dp"
                   android:layout_marginLeft="2dp"
                   android:layout_marginRight="2dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:layout_weight="27"
                   android:gravity="left"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:text="@string/title_place_event"
                   android:textSize="@dimen/sizeXSmallText"
                   android:layout_weight="35"
                   android:layout_marginLeft="2dp"
                   android:layout_marginRight="2dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:gravity="left"
                   android:textColor="@color/estafeta_text"
                   android:textStyle="bold"/>

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/sizeXSmallText"
                   android:text="@string/title_coments"
                   android:layout_marginLeft="2dp"
                   android:layout_marginRight="2dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:layout_weight="28"
                   android:gravity="left"
                   android:textColor="@color/estafeta_text"
                   android:textStyle="bold"/>

               </LinearLayout>

                <ListView
                    android:id="@+id/history_lst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@color/estafeta_light_gray"
                    android:dividerHeight="2dp"/>

            </LinearLayout><!--10-->

    <LinearLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="0dp"
        android:layout_weight   ="4"
        android:orientation     ="vertical"
        android:layout_gravity  ="center"
        android:background      ="@color/white">


        <TextView
            android:id              ="@+id/footer"
            android:layout_width    ="match_parent"
            android:layout_height   ="match_parent"
            android:textSize        ="@dimen/footerSize"
            android:text            ="@string/footer"
            android:textColor       ="@color/estafeta_soft_gray"
            android:textStyle       ="bold"
            android:gravity         ="center"
            />
    </LinearLayout><!--5-->


</LinearLayout>
