<LinearLayout
    xmlns:android           ="http://schemas.android.com/apk/res/android"
    android:layout_width    ="match_parent"
    android:layout_height   ="wrap_content"
    android:orientation     ="vertical"
    android:background      ="@color/white">

    <ScrollView
        android:layout_width    ="match_parent"
        android:layout_height   ="wrap_content"
        android:fadeScrollbars  ="false"
        android:paddingTop      ="20dp"
        android:paddingBottom   ="10dp"
        android:paddingLeft     ="20dp"
        android:paddingRight    ="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="@dimen/marginLeftImageCheck"
                android:textSize            ="@dimen/sizeNormalText"
                android:textColor           ="@color/estafeta_dark_gray"
                android:text                ="@string/module_name"
                android:gravity             ="center"
                android:textStyle           ="bold"/>

            <LinearLayout
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:orientation     ="horizontal">

                <TextView
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="match_parent"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text"
                    android:textStyle           ="bold"
                    android:text                ="@string/sender"/>

                <TextView
                    android:id                  ="@+id/lbl_sender_name"
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft   ="5dp"
                    android:maxLines            ="2"
                    android:ellipsize           ="end"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text_light_gray"
                    android:text                =""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:orientation     ="horizontal">

                <TextView
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="match_parent"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text"
                    android:textStyle           ="bold"
                    android:text                ="@string/origin"/>

                <TextView
                    android:id                  ="@+id/lbl_origin"
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft   ="5dp"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text_light_gray"
                    android:text                =""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="@dimen/marginLeftImageCheck"
                android:orientation         ="horizontal">

                <TextView
                    android:layout_width    ="wrap_content"
                    android:layout_height   ="match_parent"
                    android:textSize        ="@dimen/sizeSmallText"
                    android:textColor       ="@color/estafeta_text"
                    android:textStyle       ="bold"
                    android:text            ="@string/cp_origin"/>

                <TextView
                    android:id                  ="@+id/lbl_sender_zip_code"
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft   ="5dp"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text_light_gray"
                    android:text                =""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:orientation         ="horizontal">

                <TextView
                    android:layout_width    ="wrap_content"
                    android:layout_height   ="match_parent"
                    android:textSize        ="@dimen/sizeSmallText"
                    android:textColor       ="@color/estafeta_text"
                    android:textStyle       ="bold"
                    android:text            ="@string/receiver"/>

                <TextView
                    android:id                  ="@+id/lbl_addressee_name"
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft   ="5dp"
                    android:maxLines            ="2"
                    android:ellipsize           ="end"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text_light_gray"
                    android:text                =""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:orientation         ="horizontal">

                <TextView
                    android:layout_width    ="wrap_content"
                    android:layout_height   ="match_parent"
                    android:textSize        ="@dimen/sizeSmallText"
                    android:textColor       ="@color/estafeta_text"
                    android:textStyle       ="bold"
                    android:text            ="@string/destiny"/>

                <TextView
                    android:id                  ="@+id/lbl_destiny"
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft   ="5dp"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text_light_gray"
                    android:text                =""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:orientation     ="horizontal">

                <TextView
                    android:layout_width    ="wrap_content"
                    android:layout_height   ="match_parent"
                    android:textSize        ="@dimen/sizeSmallText"
                    android:textColor       ="@color/estafeta_text"
                    android:textStyle       ="bold"
                    android:text            ="@string/cp_destiny"/>

                <TextView
                    android:id                  ="@+id/lbl_addressee_zip_code"
                    android:layout_width        ="wrap_content"
                    android:layout_height       ="wrap_content"
                    android:layout_marginLeft   ="5dp"
                    android:textSize            ="@dimen/sizeSmallText"
                    android:textColor           ="@color/estafeta_text_light_gray"
                    android:text                =""/>

            </LinearLayout>

            <ImageView
                android:id              ="@+id/imgv_qr_code"
                android:layout_width    ="@dimen/sizeImageQR"
                android:layout_height   ="@dimen/sizeImageQR"
                android:scaleType       ="fitCenter"
                android:layout_gravity  ="center_horizontal"
                android:src             ="@drawable/ic_launcher"/>

            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="@dimen/marginContinuePrefilled2"
                android:orientation         ="horizontal"
                android:gravity             ="center"
                android:weightSum           ="100">

                <Button
                    android:id              ="@+id/btn_save_as"
                    android:layout_width    ="0dp"
                    android:layout_height   ="40dp"
                    android:layout_weight   ="55"
                    android:background      ="@drawable/background_button_dark_red"
                    android:textAllCaps     ="false"
                    android:text            ="@string/edit_save"
                    android:textSize        ="@dimen/sizeMediumText"
                    android:textColor       ="@color/white"/>

            </LinearLayout>

            <TextView
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:textColor       ="@color/estafeta_text"
                android:textSize        ="@dimen/sizeXSmallText"
                android:text            ="@string/extra_info_save_as"/>


            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="@dimen/marginContinuePrefilled2"
                android:orientation         ="horizontal">

                <Button
                    android:id              ="@+id/btn_share"
                    android:layout_width    ="0dp"
                    android:layout_height   ="wrap_content"
                    android:layout_weight   ="50"
                    android:gravity         ="center"
                    android:textAllCaps     ="false"
                    android:textSize        ="@dimen/sizeMediumText"
                    android:textColor       ="@color/estafeta_red"
                    android:background      ="@android:color/transparent"
                    android:text            ="@string/fav_btn_share"/>

                <Button
                    android:id              ="@+id/btn_close"
                    android:layout_width    ="0dp"
                    android:layout_height   ="wrap_content"
                    android:layout_weight   ="50"
                    android:gravity         ="center"
                    android:textAllCaps     ="false"
                    android:textSize        ="@dimen/sizeMediumText"
                    android:textColor       ="@color/estafeta_red"
                    android:background      ="@android:color/transparent"
                    android:text            ="@string/fav_btn_closed"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
