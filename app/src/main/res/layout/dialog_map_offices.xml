<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/estafeta_light_gray"
    android:weightSum="100">


    <FrameLayout
        android:id                  ="@+id/mapEstafeta"
        android:name                ="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width        ="match_parent"
        android:layout_height       ="180dp"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_nombre_estafeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sizeMediumText"
            android:textColor="@color/estafeta_text"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txv_direccion_estafeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sizeMediumText"
            android:layout_marginBottom="10dp"
            android:textColor="@color/estafeta_text"
            />

        <TextView
            android:id="@+id/txv_horario_estafeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sizeMediumText"
            android:text="Horario"
            android:layout_marginBottom="5dp"
            android:textColor="@color/estafeta_text"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txv_horario2_estafeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sizeMediumText"
            android:layout_marginBottom="10dp"
            android:textColor="@color/estafeta_text"
            />

        <TextView
            android:id="@+id/txv_correo_estafeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sizeMediumText"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/estafeta_text"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:textSize="@dimen/sizeMediumText"
                android:text="Ext."
                android:textColor="@color/estafeta_text"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txv_ext_estafeta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:textSize="@dimen/sizeMediumText"
                android:layout_marginBottom="10dp"
                android:textColor="@color/estafeta_text"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_telefono_estafeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/estafeta_red"
                    android:textSize="@dimen/sizeMediumText"
                    android:drawableLeft="@drawable/ic_phone"
                    android:textStyle="bold"
                    android:text="5558370295"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_ir_estafeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/estafeta_red"
                    android:textSize="16sp"
                    android:text="IR A"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/btn_compartir_estafeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/estafeta_red"
                    android:textSize="16sp"
                    android:text="COMPARTIR"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/btn_cerrar_estafeta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/estafeta_red"
                    android:textSize="16sp"
                    android:text="CERRAR"
                    android:background="@android:color/transparent"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>