<LinearLayout
    xmlns:android           ="http://schemas.android.com/apk/res/android"
    android:layout_width    ="match_parent"
    android:layout_height   ="match_parent"
    android:orientation     ="vertical"
    android:background      ="@color/white">

    <LinearLayout
        android:layout_width    ="match_parent"
        android:layout_height   ="wrap_content"
        android:orientation     ="vertical"
        android:background      ="@color/estafeta_background_gray">

        <TextView
            android:id              ="@+id/lbl_subtitle"
            android:layout_width    ="match_parent"
            android:layout_height   ="wrap_content"
            android:textColor       ="@color/estafeta_text"
            android:text            ="@string/data_sender"
            android:textSize        ="@dimen/sizeSmallText"
            android:paddingLeft     ="25dp"
            android:paddingBottom   ="5dp"
            android:paddingTop      ="5dp"/>

    </LinearLayout>


    <ScrollView
        android:layout_width    ="match_parent"
        android:layout_height   ="match_parent"
        android:fadeScrollbars  ="false"
        android:orientation     ="vertical">

        <LinearLayout
            android:layout_width    ="match_parent"
            android:layout_height   ="match_parent"
            android:paddingLeft     ="25dp"
            android:paddingRight    ="25dp"
            android:paddingTop      ="10dp"
            android:paddingBottom   ="10dp"
            android:orientation     ="vertical">
            <!-- 1 -->
            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:weightSum           ="100"
                android:layout_marginBottom ="5dp"
                android:orientation         ="horizontal">

                <!-- 1.1 -->
                <EditText
                    android:id                  ="@+id/txt_sender_name"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:textSize            ="@dimen/sizeMediumText"
                    android:hint                ="@string/prefilled_name"
                    android:textCursorDrawable  ="@null"
                    android:imeOptions          ="actionNext"
                    android:singleLine          ="true"
                    android:layout_weight       ="85"/>

                <!-- 1.2 -->
                <LinearLayout
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:layout_weight       ="15"
                    android:layout_marginRight  ="5dp"
                    android:gravity             ="center"
                    android:orientation         ="vertical">

                    <ImageView
                        android:id              ="@+id/imgv_save_frequent"
                        android:padding         ="5dp"
                        android:layout_width    ="@dimen/sizeImagesPrefilledWidth"
                        android:layout_height   ="@dimen/sizeImagesPrefilledHeight"
                        android:scaleType       =  "fitCenter"
                        android:src             ="@drawable/ic_launcher"/>

                </LinearLayout>

            </LinearLayout>


            <!-- 2 -->
            <EditText
                android:id                  ="@+id/txt_business_name"
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="5dp"
                android:textCursorDrawable  ="@null"
                android:imeOptions          ="actionNext"
                android:singleLine          ="true"
                android:textSize            ="@dimen/sizeMediumText"
                android:hint                ="@string/prefilled_business_name"/>

            <!-- 3 -->
            <EditText
                android:id                  ="@+id/txt_sender_street"
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="5dp"
                android:textCursorDrawable  ="@null"
                android:imeOptions          ="actionNext"
                android:singleLine          ="true"
                android:textSize            ="@dimen/sizeMediumText"
                android:hint                ="@string/prefilled_street"/>

            <!-- 4 -->
            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:weightSum           ="100"
                android:layout_marginBottom ="5dp"
                android:orientation         ="horizontal">

                <!-- 4.1 -->
                <EditText
                    android:id                  ="@+id/txt_no_ext"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:textSize            ="@dimen/sizeMediumText"
                    android:hint                ="@string/prefilled_no_ext"
                    android:imeOptions          ="actionNext"
                    android:singleLine          ="true"
                    android:textCursorDrawable  ="@null"
                    android:layout_weight       ="47"/>

                <!-- 4.1.5 -->
                <View
                    android:layout_width    ="0dp"
                    android:layout_height   ="match_parent"
                    android:layout_weight   ="6"/>

                <!-- 4.2 -->
                <EditText
                    android:id                  ="@+id/txt_no_int"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:textSize            ="@dimen/sizeMediumText"
                    android:textCursorDrawable  ="@null"
                    android:hint                ="@string/prefilled_no_int"
                    android:imeOptions          ="actionNext"
                    android:singleLine          ="true"
                    android:layout_weight       ="47"/>

            </LinearLayout>

            <!-- 5 -->
            <LinearLayout
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:weightSum           ="100"
                android:layout_marginBottom ="10dp"
                android:orientation         ="horizontal">

                <!-- 5.1 -->
                <EditText
                    android:id                  ="@+id/txt_zip_code"
                    android:layout_width        ="0dp"
                    android:layout_height       ="match_parent"
                    android:textSize            ="@dimen/sizeMediumText"
                    android:textCursorDrawable  ="@null"
                    android:inputType           ="number"
                    android:maxLength           ="5"
                    android:enabled             ="false"
                    android:imeOptions          ="actionNext"
                    android:singleLine          ="true"
                    android:hint                ="@string/prefilled_zip_code"
                    android:layout_weight       ="85"/>

                <!-- 5.2 -->
                <LinearLayout
                    android:layout_width    ="0dp"
                    android:layout_height   ="match_parent"
                    android:layout_weight   ="15"
                    android:gravity         ="center"
                    android:orientation     ="vertical">

                    <ImageView
                        android:id              ="@+id/imgv_diary"
                        android:layout_width    ="@dimen/sizeImagesPrefilledWidth"
                        android:layout_height   ="@dimen/sizeImagesPrefilledHeight"
                        android:scaleType       =  "fitCenter"
                        android:src             ="@drawable/agenda"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 6 -->
            <Spinner
                android:id                      ="@+id/spn_sender_colony"
                android:layout_width            ="match_parent"
                android:layout_height           ="wrap_content"
                android:layout_marginBottom     ="15dp"
                android:spinnerMode             ="dialog"/>

            <!-- 7 -->
            <Spinner
                android:id                  ="@+id/spn_sender_city"
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="15dp"
                android:spinnerMode         ="dialog"/>

            <!-- 8 -->
            <Spinner
                android:id                  ="@+id/spn_sender_state"
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="10dp"
                android:spinnerMode         ="dialog"/>

            <!-- 9 -->
            <EditText
                android:id                  ="@+id/txt_sender_phone"
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:layout_marginBottom ="5dp"
                android:inputType           ="phone"
                android:maxLength           ="10"
                android:imeOptions          ="actionNext"
                android:singleLine          ="true"
                android:textCursorDrawable  ="@null"
                android:textSize            ="@dimen/sizeMediumText"
                android:hint                ="@string/prefilled_phone"/>

            <!-- 10 -->
            <EditText
                android:id                  ="@+id/txt_sender_email"
                android:layout_width        ="match_parent"
                android:layout_height       ="wrap_content"
                android:textCursorDrawable  ="@null"
                android:inputType           ="textEmailAddress"
                android:textSize            ="@dimen/sizeMediumText"
                android:imeOptions          ="actionDone"
                android:singleLine          ="true"
                android:hint                ="@string/prefilled_email"/>

            <!-- 11 -->
            <TextView
                android:layout_width            ="match_parent"
                android:layout_height           ="wrap_content"
                android:layout_marginBottom     ="30dp"
                android:textSize                ="@dimen/sizeXSmallText"
                android:textColor               ="@color/estafeta_red"
                android:text                    ="@string/mandatory_fields"/>


            <Button
                android:id              ="@+id/btn_next"
                android:layout_width    ="match_parent"
                android:layout_height   ="wrap_content"
                android:gravity         ="center"
                android:textColor       ="@color/estafeta_red"
                android:textSize        ="@dimen/sizeLargeText"
                android:textAllCaps     ="false"
                android:text            ="@string/sender_next"
                android:background      ="@android:color/transparent"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
