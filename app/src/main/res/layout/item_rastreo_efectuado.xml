<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp">

    <ImageButton
        android:id                      ="@+id/btn_favorito"
        android:layout_width            ="0dp"
        android:layout_height           ="20dp"
        android:scaleType               ="centerInside"
        android:layout_weight           ="15"
        android:layout_gravity          ="center"
        android:src                     ="@drawable/estrella_gris"
        android:background              ="@color/zxing_transparent"/>

    <LinearLayout
        android:layout_width            ="0dp"
        android:layout_height           ="wrap_content"
        android:orientation             ="vertical"
        android:layout_weight           ="70"
        android:weightSum               ="90">

        <TextView
            android:id                  ="@+id/txt_no_guia"
            android:layout_width        ="match_parent"
            android:layout_height       ="0dp"
            android:layout_marginTop    ="5dp"
            android:textColor           ="@color/estafeta_text"
            android:layout_weight       ="30"/>

        <TextView
            android:id                  ="@+id/txt_codigo_rastreo"
            android:layout_width        ="match_parent"
            android:layout_height       ="0dp"
            android:layout_marginTop    ="5dp"
            android:textColor           ="@color/estafeta_text"
            android:layout_weight       ="30"/>

        <TextView
            android:id                  ="@+id/txt_estatus"
            android:layout_width        ="match_parent"
            android:layout_height       ="0dp"
            android:textColor           ="@color/estafeta_text"
            android:layout_marginTop    ="5dp"
            android:layout_weight       ="30"/>
        </LinearLayout>

    <ImageView
        android:id="@+id/img_status"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:scaleType="centerInside"
        android:layout_weight="15"
        android:layout_gravity="center"
        android:src="@drawable/estatus_entregado"/>

</LinearLayout>