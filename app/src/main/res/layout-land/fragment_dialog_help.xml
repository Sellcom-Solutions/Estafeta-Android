<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/estafeta_light_gray"
    tools:context="com.sellcom.apps.tracker_material.Fragments.FragmentDialogHelp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@color/white"
            android:weightSum="90">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="30">
                <Button
                    android:id="@+id/btn_guia"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boton_codigo_guia"
                    android:textSize="@dimen/sizeNormalText"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@color/zxing_transparent"
                    android:textColor="@color/estafeta_red"/>

                <Button
                    android:id="@+id/btn_factura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codigo_factura"
                    android:textSize="@dimen/sizeNormalText"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@color/zxing_transparent"
                    android:textColor="@color/estafeta_text"/>

                <Button
                    android:id="@+id/btn_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/codigo_ticket"
                    android:textSize="@dimen/sizeNormalText"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:background="@color/zxing_transparent"
                    android:textColor="@color/estafeta_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30">

                    <ImageView
                        android:id="@+id/im_dialog_help"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:background="@color/white"
                        android:src="@drawable/help_guia"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30">

                <Button
                    android:id="@+id/btn_cerrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrar"
                    android:textSize="@dimen/sizeNormalText"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:background="@color/zxing_transparent"
                    android:textColor="@color/estafeta_red"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
